<Window x:Class="MedicamentStore.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicamentStore"
        AllowsTransparency="True" WindowStyle="None" 
        WindowState="Maximized" 
        mc:Ignorable="d" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
         
        
          MinWidth="{Binding WindowMinimumWidth}"
          MinHeight="{Binding WindowMinimumHeight}"
          Title="{Binding Title}"
        d:Height="1000"
       
        >
    <Window.Background>
        <SolidColorBrush Color="Transparent"/>
    </Window.Background>
   
    

    <Grid>

        <ContentControl   local:AnimateSlideInFromTopProperty.Value="{Binding AttachmentNotifVisible,FallbackValue=true}" HorizontalAlignment="Center"  VerticalAlignment="Center" Height="100"
            Content="{Binding Content}" />

    </Grid>
</Window>
